<div class="comment">
  <div class="rte">
    {{ comment.content }}
  </div>

  <em>
    {% capture author %}<strong>{{ comment.author }}</strong>{% endcapture %}
    {% capture date %}<strong><time datetime="{{ comment.created_at | date: 'yyyy-MM-dd' }}">{{ comment.created_at | date: format: 'month_day_year' }}</time></strong>{% endcapture %}
    {{ 'blogs.article.comment_meta_html' | t: author, date }}
  </em>
</div>
