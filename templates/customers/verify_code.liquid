<div class="grid">

    <div class="grid-item large--one-third push--large--one-third text-center">
        <form accept-charset="UTF-8" action="{{ '~/account/verifycode' | absolute_url }}" method="post" id="customer_verifycode" name="customer_verifycode">

            <input id="provider" name="provider" type="hidden" value="{{ form.provider }}" />
            <input id="returnUrl" name="returnUrl" type="hidden" value="{{ form.return_url }}" />
            <input id="rememberMe" name="rememberMe" type="hidden" value="{{ form.remember_me }}" />
            <input id="username" name="username" type="hidden" value="{{ form.username }}" />

            <h1>{{ 'verify.code.title' | t }}</h1>

            {% include 'form-errors-custom' %}


            {{ antiforgery }}

            <label class="hidden-label" for="code">{{ 'verify.code.label.code' | t }}</label>
            <input id="code" name="code" placeholder="{{ 'verify.code.placeholder.enter_code' | t }}" type="text" value="" autofocus />
            <label><input id="rememberBrowser" name="rememberBrowser" type="checkbox" class="check" value="true" />{{ 'verify.code.label.checkbox' | t }}</label>
            <input class="btn" type="submit" value="{{ 'verify.code.submit' | t }}" />
        </form>
    </div>

</div>
