{% layout settings.customer_layout %}

<div class="grid">

    <div class="grid-item large--one-third push--large--one-third text-center">

        {% if form.posted_successfully %}
        <div class="note form-success" id="resetSuccess">
            {{ 'customer.recover_login.success' | t }}
        </div>
        {% else %}

        <div id="recover_password">

            <h2>{{ 'customer.recover_login.title' | t }}</h2>
            <p>{{ 'customer.recover_login.subtitle' | t }}</p>

            <form accept-charset="UTF-8" action="{{ '~/account/forgotlogin' | absolute_url }}" method="post" id="recover_customer_login" name="recover_customer_login">
                {% include 'form-errors-custom' %}

                <label for="recover-email" class="hidden-label">{{ 'customer.recover_login.email' | t }}</label>
                <input type="email" value="" name="email" id="recover-email" placeholder="{{ 'customer.recover_login.email' | t }}" autocorrect="off" autocapitalize="off">

                <p>
                    <input type="submit" class="btn" value="{{ 'customer.recover_login.submit' | t }}">
                </p>
                {{ antiforgery }}

            </form>

        </div>

        {% endif %}
    </div>
</div>

