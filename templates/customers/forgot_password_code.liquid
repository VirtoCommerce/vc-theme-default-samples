{% layout settings.customer_layout %}

<div class="grid">
  <div class="grid-item large--one-third push--large--one-third">

    {% form 'forgot_password_code' %}

      <input type="hidden" value="{{ form.email }}" name="customer[email]">

      <h1>{{ 'customer.forgot_password_code.title' | t }}</h1>

      <p>{{ 'customer.forgot_password_code.subtext' | t }}</p>

      {% include 'form-errors-custom' %}

      <label for="forgot_password_code">{{ 'customer.forgot_password_code.label.code' | t }}</label>
      <input type="text" value="" id="forgot_password_code" name="customer[code]" placeholder="{{ 'customer.forgot_password_code.placeholder.enter_code' | t }}" autofocus/>

      <div class="text-center">
        <input type="submit" class="btn" value="{{ 'customer.forgot_password_code.submit' | t }}">
      </div>

    {% endform %}

  </div>
</div>